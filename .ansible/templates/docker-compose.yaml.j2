version: '3.8'
services: 

  webui:
    image: zocker160/handbrake-nvenc:latest
    environment:
      # TODO
      #- USER_ID=0
      #- GROUP_ID=0
      - KEEP_APP_RUNNING=1
      #- AUTOMATED_CONVERSION_PRESET=Custom/
      - NVIDIA_DRIVER_CAPABILITIES=video,utility
      - NVIDIA_VISIBLE_DEVICES=all
    volumes:
      - {{ config_dir }}:/storage/presets:ro
      #- nas-media:/storage/nas-media:ro
      - nas-roms:/storage/nas-roms:ro
      - {{ data_dir }}:/config:rw
      - nas-handbrake-watch:/watch:rw
      - nas-handbrake-output:/output:rw
    networks:
      - {{ traefik_network }}
    deploy:
      labels:
        - traefik.enable=true
        - traefik.http.services.{{ repository }}.loadbalancer.server.port=5800
        - traefik.http.routers.{{ repository }}.rule=Host(`{{ host }}`)
        - traefik.http.routers.{{ repository }}.service={{ repository }}
        - traefik.http.routers.{{ repository }}.tls.certresolver=step-ca

volumes:
  # NFS volumes requires `nfs-common` on Debian
  # OR `nfs-client` on CentOS/Fedora
  nas-roms:
    driver: local
    driver_opts:
      type: nfs
      o: addr={{ nfs_host }},ro,nfsvers=4,async
      device: :{{ nfs_roms_path }}

  nas-handbrake-watch:
    driver: local
    driver_opts:
      type: nfs
      o: addr={{ nfs_host }},rw,nfsvers=4,async
      device: :{{ nfs_handbrake_path }}/watch

  nas-handbrake-output:
    driver: local
    driver_opts:
      type: nfs
      o: addr={{ nfs_host }},rw,nfsvers=4,async
      device: :{{ nfs_handbrake_path }}/output

  # nas-media:
  #   driver: local
  #   driver_opts:
  #     # requires `nfs-common` on Debian
  #     # OR `nfs-client` on CentOS/Fedora
  #     type: nfs
  #     o: addr={{ nfs_host }},ro,nfsvers=4,async
  #     device: :{{ nfs_media_path }}


networks:
  {{ traefik_network }}:
    external: true
    name: {{ traefik_network }}
